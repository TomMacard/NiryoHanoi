import pyttsx3
import time

def explain_hanoi_rules():
    engine = pyttsx3.init()
    engine.say("Bienvenue dans le jeu des tours de Hanoï. Le but de ce jeu est de déplacer tous les disques d'une tour de départ vers une tour d'arrivée, en utilisant une tour intermédiaire, tout en respectant les règles suivantes : ")
    engine.runAndWait()
    time.sleep(1)  # Pause de 1 seconde après chaque message vocal
    engine.say("1. Seul un disque peut être déplacé à la fois.")
    engine.runAndWait()
    time.sleep(1)
    engine.say("2. Un disque plus grand ne peut pas être placé sur un disque plus petit.")
    engine.runAndWait()
    time.sleep(1)
    engine.say("3. Tous les disques doivent être déplacés de la tour de départ vers la tour d'arrivée.")
    engine.runAndWait()
    time.sleep(1)
    engine.say("Maintenant que vous connaissez les règles, êtes-vous prêt à jouer ?")
    engine.runAndWait()
    time.sleep(1)
    engine.say("Bonne partie !")
    engine.runAndWait()

# Appel de la fonction pour expliquer les règles avant le début de la partie
explain_hanoi_rules()

